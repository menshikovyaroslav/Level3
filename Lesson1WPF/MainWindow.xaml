<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStyle="SingleBorderWindow"
        Title="Lesson 1" Height="450">
    <Grid Background="#FF68AFD8">

        <StackPanel>
            <StackPanel Width="200" Margin="10">
                <TextBlock Text="Login" />
                <TextBox Name="LoginTb" Text="m3nshikovy@yandex.ru"></TextBox>
            </StackPanel>
            <StackPanel Width="200" Margin="10">
                <TextBlock Text="Password" />
                <PasswordBox PasswordChar="*" Name="PasswordTb"></PasswordBox>
            </StackPanel>
            <StackPanel Width="200" Margin="10">
                <TextBlock Text="Address" />
                <TextBox Name="AddressTb" Text="m3nshikovy@yandex.ru"></TextBox>
            </StackPanel>

            <Button Name="SendBtn" Content="Send" Width="200" Margin="10" Click="SendBtn_Click" />
        </StackPanel>
        

    </Grid>
</Window>
